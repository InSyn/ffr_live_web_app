{
	"name": "ffr-live-backend",
	"version": "1.0.0",
	"description": "FFR Live Backend - Node.js Express API",
	"private": true,
	"main": "server.js",
	"type": "module",
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=development nodemon -L --ignore 'node_modules' server.js",
		"start": "NODE_ENV=production node server.js",
		"start:dev": "npm run dev",
		"start:prod": "NODE_ENV=production node server.js",
		"build": "echo 'No build step required for Node.js backend'",
		"test": "cross-env NODE_ENV=test jest",
		"test:watch": "cross-env NODE_ENV=test jest --watch",
		"test:coverage": "cross-env NODE_ENV=test jest --coverage",
		"test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
		"security:audit": "npm audit --audit-level moderate",
		"security:fix": "npm audit fix",
		"db:seed": "node db/seeders/index.js",
		"db:reset": "node db/seeders/reset.js",
		"logs": "tail -f logs/app.log",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:stop": "pm2 stop ecosystem.config.js",
		"pm2:restart": "pm2 restart ecosystem.config.js",
		"pm2:logs": "pm2 logs"
	},
	"keywords": [
		"nodejs",
		"express",
		"mongodb",
		"api",
		"sports",
		"timing",
		"ffr"
	],
	"author": "FFR Development Team <dev@ffr-live.com>",
	"license": "UNLICENSED",
	"dependencies": {
		"@faker-js/faker": "^9.8.0",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-rate-limit": "^7.2.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.2.4",
		"mongoose-paginate-v2": "^1.9.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nanoid": "^5.1.5",
		"winston": "^3.13.0"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"jest": "^29.7.0",
		"nodemon": "^3.1.0",
		"supertest": "^6.3.4"
	},
	"jest": {
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"**/*.js",
			"!node_modules/**",
			"!coverage/**",
			"!jest.config.js"
		],
		"coverageDirectory": "coverage",
		"coverageReporters": [
			"text",
			"lcov",
			"html"
		],
		"testMatch": [
			"**/__tests__/**/*.js",
			"**/?(*.)+(spec|test).js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 50,
				"functions": 50,
				"lines": 50,
				"statements": 50
			}
		}
	},
	"nodemonConfig": {
		"watch": [
			"."
		],
		"ext": "js,json",
		"ignore": [
			"node_modules",
			"uploads",
			"logs",
			"coverage",
			"*.test.js"
		],
		"env": {
			"NODE_ENV": "development"
		}
	}
}
