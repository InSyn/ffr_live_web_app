actions: {
  async FETCH_EVENTS({ commit }, params) {
    commit('SET_LOADING', true);
    commit('SET_ERROR', null);  // Clear previous errors
    
    try {
      const response = await api.get('/api/v1/events', { params });
      commit('SET_EVENTS', response.data.docs);
      
